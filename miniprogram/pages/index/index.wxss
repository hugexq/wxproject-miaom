.index-swiper image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden
}
.swiper{
  margin-top: 100rpx;
}

.index-tab {
  display: flex;
  margin-top: 20rpx;
}

.index-tab view {
  flex: 1;
  text-align: center;
  padding: 10rpx;
}

.index-tab view.active {
  border-bottom: 1px solid red;
  color: red;
}

.index-list {
  display: flex;
  flex-wrap: wrap;
  color: rgb(241, 92, 255);
}

.index-list-item {
  width: 50%;
  margin: 10rpx 0;
}

.index-list-item image {
  width: 90%;
  height: 200rpx;
  display: block;
  margin: 10rpx auto;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 5rpx rgba(0, 0, 0, 0.5)
}

.index-list-text {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}